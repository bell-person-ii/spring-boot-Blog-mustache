{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    <!-- #뒤의 데이터가 여러개(리스트)인 경우 반복 출력-->
    {{#articleList}}
        <tr>
            <th scope="row">{{id}}</th>
            <td><a href = "articles/{{id}}">{{title}}</a></td>
            <td>{{content}}</td>
        </tr>
    {{/articleList}}
    </tbody>
</table>

<a href = "/articles/new">New Article</a>

{{>layouts/footer}}
